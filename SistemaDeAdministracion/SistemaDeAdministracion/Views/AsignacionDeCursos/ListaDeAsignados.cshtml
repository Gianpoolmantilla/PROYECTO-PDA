@model IEnumerable<SistemaDeAdministracion.Models.ViewModels.ReporteAsignacion>
@{
    List<SelectListItem> FKcurso = (List<SelectListItem>)ViewBag.Curso;
}

@using (Html.BeginForm())
{

    <div class="row m-10">
        <div class="col-md-10">

            <div class="form-group">
                <div class="control-label col-md-4">Curso</div>
                <div class="col-4">
                    @Html.DropDownList("Curso", FKcurso as IEnumerable<SelectListItem>, "Seleccione un curso..", new { id = "normalDropwn", @class = "form-control" })
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group col-md-10">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Buscar" class="btn btn-success" />
        </div>
    </div>
}



<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            curso
        </th>
        <th>
            año
        </th>
        <th>
            semestre
        </th>
        <th>
            turno
        </th>
        <th>
           profesor
        </th>
        <th>
            alumno
        </th>
    </tr>
    @if (Model != null)
    {
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semestre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profesor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alumno)
                </td>
            </tr>
        }

    }

</table>

